@using Domain.Dtos.Account
@model AccountLoginDto
@{
    Layout = "_AuthLayout";
}

<section class="vh-100 d-flex align-items-center justify-content-center bg-light" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h3 class="text-center text-primary mb-4">Welcome Back</h3>
                        <p class="text-center text-muted mb-5">Please log in to access your account</p>

                        <form method="post">
                            <div class="form-group mb-4">
                                <label for="email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" id="email" class="form-control" placeholder="Enter your email" />
                            </div>
                            <div class="form-group mb-4">
                                <label for="password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Enter your password" />
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                            </div>
                        </form>

                        <div class="mt-4 text-center">
                            <p class="text-muted">Don't have an account? <a href="/register" class="text-primary">Sign up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 15px;
    }

    .btn-primary {
        background: #007bff;
        border: none;
        border-radius: 10px;
        transition: background 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .card {
        border: none;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}