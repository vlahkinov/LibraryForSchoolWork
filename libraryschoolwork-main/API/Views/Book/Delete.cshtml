@using Domain.Dtos.Book
@model BookDto

<partial name="_Notification" />
<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container">
        <div class="row align-items-center mb-4">
            <div class="col-md-6">
                <h3 class="text-danger fw-bold">
                    <i class="bi bi-trash3-fill me-2"></i>Delete Book
                </h3>
            </div>
        </div>
        <div class="card shadow-lg">
            <div class="card-header bg-danger text-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fs-5"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</span>
                </div>
            </div>
            <div class="card-body p-4">
                <p class="text-muted mb-4">Are you sure you want to delete this book? This action cannot be undone.</p>
                <form method="post" asp-action="DeletePost">
                    <input asp-for="Id" hidden />
                    <div class="form-group mb-3">
                        <label for="title" class="form-label fw-bold"><i class="bi bi-bookmark me-2"></i>Title</label>
                        <input asp-for="Title" id="title" class="form-control" disabled />
                    </div>
                    <div class="form-group mb-3">
                        <label for="author" class="form-label fw-bold"><i class="bi bi-person me-2"></i>Author</label>
                        <input asp-for="Author" id="author" class="form-control" disabled />
                    </div>
                    <div class="form-group mb-3">
                        <label for="year" class="form-label fw-bold"><i class="bi bi-calendar me-2"></i>Year</label>
                        <input asp-for="Year" id="year" class="form-control" disabled />
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                    <div>
                        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary me-2">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3 me-1"></i>Delete Book
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    h3 {
        font-weight: 700;
    }

    .btn-danger {
        border: none;
        border-radius: 6px;
    }

    .btn-danger:hover {
        background-color: #bb2d3b;
    }

    .btn-outline-secondary {
        border-radius: 6px;
    }

    .card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        border-bottom: none;
    }

    .card-footer {
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .form-control {
        border-radius: 6px;
        padding: 0.75rem 1rem;
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}