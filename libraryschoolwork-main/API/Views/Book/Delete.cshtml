@using Domain.Dtos.Book
@model BookDto

<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg" style="border-radius: 15px;">
                    <div class="card-body p-5 text-center">
                        <h3 class="text-center text-danger mb-4">Delete Book</h3>
                        <p class="text-muted mb-4">Are you sure you want to delete this book? This action cannot be undone.</p>

                        <form method="post" asp-action="DeletePost">
                            <input asp-for="Id" hidden />
                            <div class="form-group mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input asp-for="Title" id="title" class="form-control" disabled />
                            </div>
                            <div class="form-group mb-3">
                                <label for="author" class="form-label">Author</label>
                                <input asp-for="Author" id="author" class="form-control" disabled />
                            </div>
                            <div class="form-group mb-3">
                                <label for="year" class="form-label">Year</label>
                                <input asp-for="Year" id="year" class="form-control" disabled />
                            </div>
                            <div class="d-flex justify-content-around mt-4">
                                <button type="submit" class="btn btn-danger btn-lg" style="width: 150px;">Delete</button>
                                <a asp-controller="Book" asp-action="Index" class="btn btn-secondary btn-lg" style="width: 150px;">Back To List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 15px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-danger:hover {
            background-color: #b02a37;
        }

    .btn-secondary {
        border-radius: 10px;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-secondary:hover {
            background-color: #6c757d;
        }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}