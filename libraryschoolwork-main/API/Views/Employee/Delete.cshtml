@using Domain.Dtos
@model EmployeeDto

<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container">
        <form method="post" asp-action="DeletePost">
            <input asp-for="Id" hidden />
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white py-3">
                    <h3 class="mb-0"><i class="bi bi-trash3 me-2"></i>Delete Employee</h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Are you sure you want to delete this employee? This action cannot be undone.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label class="form-label fw-bold"><i class="bi bi-person-badge me-1"></i>Title</label>
                                <input asp-for="Title" disabled class="form-control form-control-lg bg-light" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label class="form-label fw-bold"><i class="bi bi-telephone me-1"></i>Phone Number</label>
                                <input asp-for="PhoneNumber" disabled class="form-control form-control-lg bg-light" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light py-3">
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash3 me-1"></i>Confirm Delete
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        border-bottom: none;
    }

    .card-footer {
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .form-control {
        border-radius: 6px;
        padding: 0.75rem 1rem;
    }

    .btn-danger {
        border: none;
        border-radius: 6px;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

    .btn-outline-secondary {
        border-radius: 6px;
    }

    .alert-danger {
        border-radius: 10px;
        border-left: 5px solid #842029;
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}