@using Domain.Dtos
@model List<EmployeeDto>
<partial name="_Notification" />
<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container">
        <div class="row align-items-center mb-4">
            <div class="col-md-6">
                <h3 class="text-primary fw-bold">
                    <i class="bi bi-people-fill me-2"></i>Employee List
                </h3>
            </div>
            <div class="col-md-6 text-end">
                <a asp-controller="Employee" asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Create New Employee
                </a>
            </div>
        </div>
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fs-5"><i class="bi bi-table me-2"></i>Employee Directory</span>
                    <span class="badge bg-light text-primary">Total: @Model.Count</span>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered text-center align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-person-badge me-1"></i>Title</th>
                                <th><i class="bi bi-key me-1"></i>Account ID</th>
                                <th><i class="bi bi-check-circle me-1"></i>Role</th>
                                <th><i class="bi bi-telephone me-1"></i>Phone Number</th>
                                <th><i class="bi bi-gear me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.AccountId</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Seller</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Manager</span>
                                        }
                                    </td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm mx-1">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm mx-1">
                                                <i class="bi bi-trash3"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-house me-1"></i>Back to Home
                    </a>
                    <small class="text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    h3 {
        font-weight: 700;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        border-radius: 6px;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    .btn-outline-primary, .btn-outline-danger, .btn-outline-secondary {
        border-radius: 6px;
    }

    .card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        border-bottom: none;
    }

    .card-footer {
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 0;
    }

    .table-dark {
        background-color: #212529;
    }

    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    .badge {
        font-weight: 500;
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
</style>